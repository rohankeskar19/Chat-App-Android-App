<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:clickable="false"
    android:foreground="?attr/selectableItemBackground"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/freindProfileImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/freindProfileImageView"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/freindNameTextView"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Rohan Keskar"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="220dp"
                />
            <TextView
                android:id="@+id/lastMessageDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="Today"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/messageStatusSticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/message_read_bg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/messageHolderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/lastMessageTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Honnaaa ikk..................."
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="200dp"
                />
            <TextView
                android:id="@+id/lastMessageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="10:20 AM"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />

        </RelativeLayout>




    </LinearLayout>





</RelativeLayout>